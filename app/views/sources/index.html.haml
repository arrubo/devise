%h3{style:"color:red"}= flash['notice']
%h1 Listing sources
= link_to 'Import', import_form_sources_path
%table
  %thead
    %tr
      %th Name
      %th Uploaded_at
      %th Persisted_at
      %th
      %th
      %th
      %th
  %tbody
    - @sources.each do |source|
      %tr
        %td= source.name
        %td= source.uploaded_at
        %td= source.persisted_at
        %td= link_to 'Show', source
        %td= link_to 'Upload', edit_source_path(source)
        %td= link_to 'Persist', edit_source_path(source)
        %td= link_to 'Destroy', source, method: :delete, data: { confirm: 'Are you sure?' }



